---
import type {
  HourlyForecastItem,
  DailyForecastItem,
} from "../util/weather-data-types";
import DailyForecast from "./DailyForecast.astro";
import HourlyForecast from "./HourlyForecast.astro";

type Props = { hourly: HourlyForecastItem[]; daily: DailyForecastItem[] };

const { hourly, daily } = Astro.props;
---

<div class="forecast-container">
  <h3>Next 12 Hours</h3>
  <div class="hourly-forecast-container">
    {hourly.slice(0, 13).map((data) => <HourlyForecast data={data} />)}
  </div>
  <h3>Next 7 Days</h3>
  <div class="daily-forecast-container">
    {daily.map((data, index) => <DailyForecast data={data}) label={index === 0 ? 'Tomorrow' : undefined} />)}
  </div>
</div>

<style lang="scss">
  .forecast-container {
  }
  .hourly-forecast-container {
    display: flex;
    flex-direction: row;
    max-width: 85vw;
    overflow-x: auto;
  }
  .daily-forecast-container {
    display: flex;
    flex-direction: row;
    max-width: 85vw;
    overflow-x: auto;
  }
</style>
