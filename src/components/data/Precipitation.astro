---
import TextData from "./TextData.astro";

type Props = { value: number; label?: string };
const { value, label = "precip" } = Astro.props;
---

<div class="container">
  <meter min="0" max="1" value={value} title="inches precip"></meter>
  <div>
    <label>{label}:</label><br />
    <TextData>{value.toFixed(2)}"</TextData>
  </div>
</div>

<style>
  div.container {
    align-items: flex-end;
    display: flex;
    flex-direction: row;
    width: 120px;
  }
  label {
    font-size: 0.75rem;
  }
  meter {
    transform: rotate(-90deg) translate(20px, 14px);
    width: 50px;
  }
  meter::-webkit-meter-optimum-value {
    background: #0863ff;
  }
</style>
